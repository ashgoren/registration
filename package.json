{
  "name": "registration",
  "private": true,
  "workspaces": ["packages/*"],
  "overrides": {
    "tough-cookie": "~4.1.3"
  },
  "type": "module",
  "scripts": {
    "//1": "Frontend",
    "dev": "npm run dev -w @registration/frontend",
    "start": "npm run start -w @registration/frontend",
    "build": "npm run build -w @registration/frontend",
    "lint": "npm run lint -w @registration/frontend",
    "test": "npm run test -w @registration/frontend",
    "test:coverage": "npm run test:coverage -w @registration/frontend",

    "//2": "Functions",
    "emulator": "node ./scripts/start-emulator.js",
    "functions-shell": "node ./scripts/start-functions-shell.js",
    "localtunnel": "lt -p 5001 -s $1",
    "dev:functions": "npm run serve -w @registration/functions",
    "build:functions": "npm run build -w @registration/functions",
    "deploy:functions": "npm run deploy -w @registration/functions",

    "//3": "Infrastructure",
    "terraform-stg": "node scripts/bootstrap/terraformWrapper.js stg",
    "terraform-prd": "node scripts/bootstrap/terraformWrapper.js prd",
    "terraform-destroy-stg": "node scripts/bootstrap/terraformWrapper.js stg destroy",
    "terraform-destroy-prd": "node scripts/bootstrap/terraformWrapper.js prd destroy",
    "bootstrap": "node scripts/bootstrap/main.js",
    "shutdown": "bash scripts/shutdown-firebase.sh",
    "set-payment-secrets": "node scripts/bootstrap/setPaymentSecrets.js",

    "//4": "Scripts",
    "disable-apis": "bash scripts/disable-apis.sh",
    "enable-apis": "bash scripts/enable-apis.sh",
    "orders-stg": "doppler run -c stg_frontend -- node ./scripts/orders.js",
    "orders-prd": "doppler run -c prd_frontend -- node ./scripts/orders.js",
    "matchPayments-stg": "doppler run -c stg_frontend -- node ./scripts/matchPayments.js",
    "matchPayments-prd": "doppler run -c prd_frontend -- node ./scripts/matchPayments.js"
  }
}